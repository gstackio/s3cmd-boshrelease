---
name: create-buckets

templates:
  bin/run: bin/run

packages:
  - python-2.7
  - python-dateutil
  - s3cmd

properties:

  buckets:
    description: |
      A list of buckets to create.
    default: []

  s3.host:
    desctiption: |
      The S3 server hostname or IP address.

  s3.scheme:
    description: |
      Whether 'http' or 'https' should be used.
    default: "https"

  s3.api_key:
    description: |
      The S3 API key to use when accessing the S3 server.

  s3.api_secret:
    description: |
      The S3 secret to use when accessing the S3 server.

